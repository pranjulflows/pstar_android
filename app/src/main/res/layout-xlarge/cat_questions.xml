<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal|center"
    android:background="@drawable/background"
    android:baselineAligned="true"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:background="#000"
        android:gravity="center_vertical"
        android:paddingRight="0dp" android:paddingBottom="10dp" android:paddingLeft="10dp" android:paddingTop="10dp">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:onClick="onHome"
            android:src="@drawable/home" />

        <ImageView
            android:id="@+id/img_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/imageView5"
            android:onClick="onNext"
            android:src="@drawable/next_btn" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:gravity="center_horizontal"
        android:padding="5dp" >

        <TextView
            android:id="@+id/txt_question_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/txt_cat_category"
            android:text="0/0"
            android:textStyle="bold"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/txt_cat_category"
            android:layout_width="780dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/txt_question_count"
            android:gravity="center_horizontal|center"
            android:text="COLLISION AVOIDANCE"
            android:textColor="#fff"
            android:textSize="36sp" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/img_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:color/transparent" android:layout_gravity="center_horizontal"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="1"
        android:weightSum="1" >

      <ScrollView
            android:id="@+id/asdf"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".25"
            android:background="@drawable/btn_highliter"
            android:gravity="center" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/txt_cat_quesion"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="15dp"
                    android:gravity="center"
                    android:lineSpacingExtra="4dp"
                    android:padding="5dp"
                    android:text="Which statement is true with regard to aircraft converging at approximately the same altitude?"
                    android:textColor="#fff"
                    android:textSize="30sp" />

            </LinearLayout>
        </ScrollView>

   
    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_weight=".75" >

        <LinearLayout
            android:id="@+id/linearLayout5"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="#cccccc"
                android:paddingTop="20dp"  />

            <LinearLayout
                android:id="@+id/linearLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:baselineAligned="true"
                android:gravity="center"
                android:paddingRight="5dp"
                android:weightSum="1" >

                <Button
                    android:id="@+id/btn_cat_choice1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:background="@android:color/transparent"
                    android:freezesText="true"
                    android:gravity="left|center_vertical"
                    android:minHeight="60dp"
                    android:padding="15dp"
                    android:text="A jet airliner has the right of way over all other aircraft."
                    android:textColor="#fff"
                    android:textSize="28sp" />

                <ImageView
                    android:id="@+id/img_RW_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:layout_gravity="center_vertical"
                    android:src="@android:color/transparent" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#cccccc"
                android:paddingTop="20dp" />

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:baselineAligned="true"
                android:gravity="center"
                android:paddingRight="5dp"
                android:weightSum="1" >

                <Button
                    android:id="@+id/btn_cat_choice2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:background="@android:color/transparent"
                    android:gravity="left|center_vertical"
                    android:minHeight="60dp"
                    android:padding="15dp"
                    android:text="An aircraft towing objects has the right of way over all power-driven heavier-than-air aircraft."
                    android:textColor="#fff"
                    android:textSize="28sp" />

                <ImageView
                    android:id="@+id/img_RW_2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:layout_gravity="center_vertical"
                    android:src="@android:color/transparent" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginTop="4dp"
                android:background="#cccccc"
                android:paddingTop="20dp" />

            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"
                android:paddingRight="5dp"
                android:weightSum="1" >

                <Button
                    android:id="@+id/btn_cat_choice3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:background="@android:color/transparent"
                    android:gravity="left|center_vertical"
                    android:minHeight="60dp"
                    android:padding="15dp"
                    android:text="An aeroplane has the right of way over all other aircraft which are converging from the left."
                    android:textColor="#fff"
                    android:textSize="28sp" />

                <ImageView
                    android:id="@+id/img_RW_3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:layout_gravity="center_vertical"
                    android:src="@android:color/transparent" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginTop="4dp"
                android:background="#cccccc"
                android:paddingTop="20dp" />

            <LinearLayout
                android:id="@+id/linearLayout4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"
                android:paddingRight="5dp" >

                <Button
                    android:id="@+id/btn_cat_choice4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:background="@android:color/transparent"
                    android:gravity="left|center_vertical"
                    android:minHeight="60dp"
                    android:padding="15dp"
                    android:text="Aeroplanes towing gliders must give way to helicopters."
                    android:textColor="#fff"
                    android:textSize="28sp" />

                <ImageView
                    android:id="@+id/img_RW_4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:layout_gravity="center_vertical"
                    android:src="@android:color/transparent" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginTop="4dp"
                android:background="#cccccc"
                android:paddingTop="20dp" />
        </LinearLayout>
    </ScrollView>
   </LinearLayout>
</LinearLayout>